// The following requirement is tested:
// Also, the event operation shall not use the operations create, running, alive
// and activate.

module NegSem_2002_TheAltStatement_010 {

    type port MyPort message {
        inout boolean
    } with {extension "internal"}
    
    type component GeneralComp { 
	    port MyPort p;
    }

	function f_dummy() runs on GeneralComp {}
    
    testcase TC_NegSem_2002_TheAltStatement_010() runs on GeneralComp {

		var GeneralComp d_ptc := GeneralComp.create alive;
		d_ptc.start(f_dummy());

        connect(self:p, self: p);
	    p.send(true);

	    alt {
		    [] p.receive(boolean:d_ptc.alive) {
			    setverdict(pass);
		    }
	    }

		d_ptc.kill;
    }
    
    control {
	    execute(TC_NegSem_2002_TheAltStatement_010());
    }
}
