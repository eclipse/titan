module NegSem_210302_Start_test_component_002 {

    type component GeneralComp { }

	type  record Rectype{}

	function f() runs on GeneralComp {} 

    testcase TC_NegSem_210302_Start_test_component_002() runs on GeneralComp system GeneralComp {
