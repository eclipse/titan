	type component GeneralComp {
	}
    
	function f(@fuzzy integer p_int) {
        if (p_int == 1) { setverdict(pass); }
        else { setverdict(fail); }
	}
	
	testcase TC_Sem_050401_top_level_022() runs on GeneralComp {
		f(1);
	}

	control{
		execute(TC_Sem_050401_top_level_022());
	}
}
