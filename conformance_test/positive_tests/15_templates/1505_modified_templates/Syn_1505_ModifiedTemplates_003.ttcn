module Syn_1505_ModifiedTemplates_003 {

	type record MyMessageType {
		integer field1,
		charstring field2,
		boolean field3
	}

	template MyMessageType m_templateOne(integer p_intValue) := {
		field1 := p_intValue,
		field2 := "Hello World",
		field3 := true
	}

	template MyMessageType m_templateTwo(integer p_intValue:=2, boolean p_boolValue:=false) modifies m_templateOne := {  
		field1 := p_intValue,
		field3 := p_boolValue
	}

	type component GeneralComp {}

	testcase TC_Syn_1505_ModifiedTemplates_003() runs on GeneralComp 
	{ setverdict(pass);	}
	
	control
	{ execute(TC_Syn_1505_ModifiedTemplates_003()); }

}
